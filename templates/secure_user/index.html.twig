{% extends 'base.html.twig' %}

{% block title %}SecureUser index{% endblock %}

{% block body %}
    <h1>SecureUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secure_user in secure_users %}
            <tr>
                <td>{{ secure_user.id }}</td>
                <td>{{ secure_user.username }}</td>
                <td>{{ secure_user.roles ? secure_user.roles|json_encode : '' }}</td>
                <td>{{ secure_user.password }}</td>
                <td>
                    <a href="{{ path('secure_user_show', {'id': secure_user.id}) }}">show</a>
                    <a href="{{ path('secure_user_edit', {'id': secure_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('secure_user_new') }}">Create new</a>
{% endblock %}
